<mvc:View
	controllerName="it.quasar_x7.openui5.sito.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns="sap.m"
	xmlns:layout= "sap.ui.layout"
	height="100%">
	<!-- nav bar -->
	<f:ShellBar
			title="Menu"
			homeIcon="./resources/images/logo.png"
			showSearch="true"
			showProductSwitcher="true"
			class="barraMenu"
			>
		<f:menu>
			<Menu>
				<MenuItem text="Flight booking" icon="sap-icon://flight" />
				<MenuItem text="Car rental" icon="sap-icon://car-rental" />
			</Menu>
		</f:menu>
	</f:ShellBar>
	<!-- routing -->
	<Shell>
		<App id="app"/>
	</Shell>
</mvc:View>